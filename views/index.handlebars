<h1>Eat da Burger!!!</h1>

<img src="https://www.chanticleerholdings.com/wp-content/uploads/2019/01/Roadstar-Burger.png" style="width:350px">

<div class="row">
    <div class=col-md-5>
        <h2>Burgers</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class=col-md-5>
        <h2>Devoured Burgers</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>

<div class="row">
    <h2>Add a Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="bur">Burger Name:</label>
            <input type="text" id="bur" name="name">
        </div>

        <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0">Ready to be Devoured!
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>